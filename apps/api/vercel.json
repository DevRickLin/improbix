{
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "node_modules/@anthropic-ai/**",
          "node_modules/.pnpm/@anthropic-ai+*/**",
          "../../node_modules/@anthropic-ai/**",
          "../../node_modules/.pnpm/@anthropic-ai+*/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    }
  ],
  "crons": [
    {
      "path": "/api/tasks/cron/tick",
      "schedule": "0 1 * * *"
    }
  ]
}
