{
  "name": "improbix",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "dev:api": "turbo run dev --filter=@improbix/api",
    "dev:web": "turbo run dev --filter=@improbix/web",
    "build:api": "turbo run build --filter=@improbix/api",
    "build:web": "turbo run build --filter=@improbix/web",
    "start:worker": "turbo run start:worker --filter=@improbix/api"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "e2b>chalk": "4.1.2"
    }
  }
}
